{
    "group": {
        "default": {
            "targets": [
                "ohmyzsh-docs-no-glibc",
                "ohmyzsh-docs-glibc",
                "ohmyzsh-no-docs-glibc",
                "ohmyzsh-no-docs-no-glibc"
            ]
        }
    },
    "target": {
        "docker-metadata-action": {},
        "base-config": {
            "inherits": [
                "docker-metadata-action"
            ],
            "context": "./",
            "dockerfile": "Dockerfile",
            "pull": true,
            "platforms": [
                "linux/amd64",
                "linux/arm/v6",
                "linux/arm/v7",
                "linux/arm64",
                "linux/386"
            ],
            "labels": {
                "maintainer": "Jesse N. <jesse@keplerdev.com>",
                "com.keplerdev.maintainer": "Jesse N. <jesse@keplerdev.com>",
                "com.keplerdev.url": "https://keplerdev.com",
                "com.keplerdev.image": "alpine-zsh",
                "com.keplerdev.description": "Base Alpine image used by all deriving images developed by myself, and members of Kepler Development. Includes common packages such as rsync, ca-certificates, nano, curl, jq, yq, and zsh as the primary shell. OhMyZsh is also installed with some settings customized.",
                "com.keplerdev.repository": "https://github.com/jessenich/docker-alpine-zsh",
                "com.keplerdev.registry": "https://dockerhub.com/u/jessenich91/alpine-zsh",
                "com.keplerdev.alpine-version": "3.14.0"
            },
            "args": {
                "ALPINE_VERSION": "3.14.0"
            },
            "output": [
                "type=registry"
            ]
        },
        "ohmyzsh-docs-no-glibc": {
            "inherits": [
                "base-config"
            ],
            "target": "ohmyzsh",
            "labels": {
                "com.keplerdev.variant": "ohmyzsh-docs",
                "com.keplerdev.tag": "latest",
                "com.keplerdev.no-docs": "false"
            },
            "args": {
                "NO_DOCS": "false",
                "GLIBC_VERSION": null
            }
        },
        "ohmyzsh-no-docs-no-glibc": {
            "inherits": [
                "base-config"
            ],
            "target": "glibc",
            "labels": {
                "com.keplerdev.target": "ohmyzsh-no-docs",
                "com.keplerdev.tag": "no-docs-latest",
                "com.keplerdev.no-docs": "true"
            },
            "args": {
                "NO_DOCS": "true",
                "GLIBC_VERSION": null
            }
        },
        "ohmyzsh-docs-glibc": {
            "inherits": [
                "base-config"
            ],
            "target": "glibc",
            "labels": {
                "com.keplerdev.variant": "ohmyzsh-docs",
                "com.keplerdev.tag": "latest",
                "com.keplerdev.no-docs": "false"
            },
            "args": {
                "NO_DOCS": "false",
                "GLIBC_VERSION": "2.33-r0"
            }
        },
        "ohmyzsh-no-docs-glibc": {
            "inherits": [
                "base-config"
            ],
            "target": "glibc",
            "labels": {
                "com.keplerdev.target": "ohmyzsh-no-docs",
                "com.keplerdev.tag": "no-docs-latest",
                "com.keplerdev.no-docs": "true"
            },
            "args": {
                "NO_DOCS": "true",
                "GLIBC_VERSION": "2.33-r0"
            }
        }
    }
}